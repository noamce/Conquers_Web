<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ServletClasses.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lobby</servlet-name>
        <servlet-class>ServletClasses.LobbyServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>SingleGame</servlet-name>
        <servlet-class>ServletClasses.SingleGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>lobby1</servlet-name>
        <servlet-class>ServletClasses.LobbyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ServletClasses.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpLoadXmlFile</servlet-name>
        <servlet-class>ServletClasses.UpLoadXmlFile</servlet-class>
        <multipart-config>
            <max-file-size>10485760</max-file-size>
            <max-request-size>20971520</max-request-size>
            <file-size-threshold>5242880</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>PlayerInfo</servlet-name>
        <servlet-class>ServletClasses.PlayerInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>lobby</servlet-name>
        <url-pattern>/Lobby</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>lobby1</servlet-name>
        <url-pattern>/Lobby/Lobby</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SingleGame</servlet-name>
        <url-pattern>/GameRoom/SingleGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpLoadXmlFile</servlet-name>
        <url-pattern>/UpLoadXmlFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpLoadXmlFile</servlet-name>
        <url-pattern>/Lobby/UpLoadXmlFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayerInfo</servlet-name>
        <url-pattern>/playerInfo</url-pattern>
    </servlet-mapping>

</web-app>